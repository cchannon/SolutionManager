<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SolutionManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SolutionManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Title="Lockheed Martin Power Platform Environment Management App">

    <Page>
        <Page.Resources>
            <!--Custom Radio Button Styles to make bottom of page Pivot-->
            <Style TargetType="RadioButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                                    <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <Border x:Name="BottomBorder" BorderBrush="{ThemeResource SystemControlHighlightAccentBrush}" BorderThickness="0,0,0,3" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemBaseMediumColor}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAltHighColor}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="FontWeight">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="SemiBold"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BottomBorder" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Checked">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="Background">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAltLowColor}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Foreground">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemAltHighColor}"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="FontWeight">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="SemiBold"/>
                                                </ObjectAnimationUsingKeyFrames>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BottomBorder" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Page.Resources>

        <Grid x:ConnectionId='10'                     >

            <!-- Splash Screen -->
            <Image x:ConnectionId='11' x:Name="splashScreen" Source="assets/lockheed-martin-logo.png" Stretch="Uniform" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Command Panel -->
                <StackPanel x:ConnectionId='22' x:Name="commandPanel" Orientation="Horizontal" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity="0" Padding="10" Margin="10" CornerRadius="5" Grid.Row="0" HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='81' x:Name="authProfileText" Text="Auth Profile: Default" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{ThemeResource SystemBaseHighColor}"/>
                    <Button x:ConnectionId='82' x:Name="changeAuthProfileButton" Content="Change Auth Profile"                                       Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" />
                </StackPanel>

                <Grid x:ConnectionId='23' x:Name="mainContent" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Export Solution Content -->
                    <Grid x:ConnectionId='28' x:Name="exportContent" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2.5*" />
                        </Grid.ColumnDefinitions>
                        <!-- Environment Panel -->
                        <Grid Grid.Column="0" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Environments" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                                <ListBox x:ConnectionId='80' x:Name="environmentList"                                                     ItemsSource="{Binding EnvironmentProfiles}" DisplayMemberPath="DisplayName" />
                            </ScrollViewer>
                        </Grid>
                        <!-- Solution Panel -->
                        <Grid x:ConnectionId='70' x:Name="solutionsListPanel" Grid.Column="1" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Unmanaged Solutions" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                                <ListBox x:ConnectionId='79' x:Name="solutionsList"                                                  ItemsSource="{Binding SolutionProfiles}" DisplayMemberPath="FriendlyName" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </ScrollViewer>
                        </Grid>
                        <!-- Solution Details Panel -->
                        <Grid x:ConnectionId='71' x:Name="solutionDetailsPanel" Grid.Column="2" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Visibility="Collapsed" Padding="10" Margin="10" CornerRadius="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Export Options" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <Grid Grid.Column="0" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <!-- Zip File Path -->
                                <TextBlock Text="Zip File Path:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Column="0" Grid.Row="0"/>
                                <Grid Margin="0,0,0,10" Grid.Column="0" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.25*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='77' x:Name="zipFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                    <Button x:ConnectionId='78' x:Name="exportPathBrowse" Content="Browse"                                  Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1"/>
                                </Grid>
                                <!-- Export as Managed -->
                                <CheckBox x:ConnectionId='73' x:Name="exportAsManagedCheckBox" Content="Export as Managed" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}"  Grid.Column="0" Grid.Row="2" />

                                <!-- Overwrite -->
                                <CheckBox x:ConnectionId='74' x:Name="overwriteCheckBox" Content="Overwrite" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Column="0" Grid.Row="3" Opacity="1"/>
                                <!-- Export and Publish Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="4">
                                    <Button x:ConnectionId='75' x:Name="publishButton" Content="📤 Publish"                             Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Width="auto" FontSize="18" Margin="0,0,10,0"/>
                                    <Button x:ConnectionId='76' x:Name="exportButton" Content="🏃‍♂️‍➡️ Export"                            Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Width="auto" FontSize="18"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                                <!-- Include Settings -->
                                <TextBlock Text="Include Settings:" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold"/>
                                <ListBox x:ConnectionId='72' x:Name="includeSettingsListBox" SelectionMode="Multiple" Margin="0,0,0,10" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBoxItem Content="autonumbering"/>
                                    <ListBoxItem Content="calendar"/>
                                    <ListBoxItem Content="customization"/>
                                    <ListBoxItem Content="emailtracking"/>
                                    <ListBoxItem Content="externalapplications"/>
                                    <ListBoxItem Content="general"/>
                                    <ListBoxItem Content="isvconfig"/>
                                    <ListBoxItem Content="marketing"/>
                                    <ListBoxItem Content="outlooksynchronization"/>
                                    <ListBoxItem Content="relationshiproles"/>
                                    <ListBoxItem Content="sales"/>
                                </ListBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <!-- Update Solution Content -->
                    <Grid x:ConnectionId='29' x:Name="updateContent" Grid.Column="0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3.5*" />
                        </Grid.ColumnDefinitions>
                        <!-- Update Stage Panel -->
                        <Grid Grid.Column="0" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Update Stage" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <RadioButton x:ConnectionId='68' Content="Replace GUIDs"                                     HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Height="35" IsChecked="True"/>
                            <RadioButton x:ConnectionId='69' Content="Settings.JSON"                                     HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Height="35" IsChecked="False"/>
                        </Grid>
                        <!-- GuidSwap Panel-->
                        <Grid x:ConnectionId='44' x:Name="guidSwapPanel" Grid.Column="1" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Swap Guids" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <TextBlock Text="Zip File Path:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="1"/>
                            <Grid Margin="0,0,0,10" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.25*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:ConnectionId='66' x:Name="updateZipFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                <Button x:ConnectionId='67' x:Name="updateGuidsZipBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1"/>
                            </Grid>
                            <TextBlock Text="Csv File Path:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="3"/>
                            <Grid Margin="0,0,0,10" Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.25*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:ConnectionId='64' x:Name="updateCsvFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                <Button x:ConnectionId='65' x:Name="updateGuidsCsvBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                            </Grid>
                            <TextBlock Text="Target Directory:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="5"/>
                            <Grid Margin="0,0,0,10" Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.25*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:ConnectionId='62' x:Name="updateGuidsTargetDirTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                <Button x:ConnectionId='63' x:Name="updateGuidsTargetDirBrowse" Content="Browse"                                  Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                            </Grid>
                            <controls:DataGrid x:ConnectionId='60' x:Name="csvPreviewDataGrid" Grid.Row="7" AutoGenerateColumns="True" IsReadOnly="True" Background="{ThemeResource SystemChromeHighColor}" Opacity="1"/>
                            <Button x:ConnectionId='61' x:Name="swapGuidsButton" Content="🔄️ Replace Strings" Grid.Row="8"                              Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Width="auto" FontSize="18" Visibility="Collapsed"/>
                        </Grid>
                        <!-- Settings File Panel-->
                        <Grid x:ConnectionId='45' x:Name="settingsFilePanel" Grid.Column="1" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Settings.JSON file generation and update" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0" Grid.Column="0"/>
                            <!-- ToggleSwitch to switch between single file and recursive directory -->
                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Generate Mode:" Margin="10,0,10,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="1" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <ToggleSwitch x:ConnectionId='59' x:Name="generateModeToggle" OnContent="Single File" OffContent="Directory-Recursive"                                      Margin="0,0,0,10" Grid.Row="1" Foreground="{ThemeResource SystemBaseHighColor}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!-- Single File Generation -->
                            <StackPanel x:ConnectionId='46' x:Name="singleFilePanel" Grid.Row="1" Grid.Column="1" Visibility="Collapsed">
                                <TextBlock Text="Solution:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" />
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.25*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='57' x:Name="settingsZipFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                    <Button x:ConnectionId='58' x:Name="settingsZipFilePathBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                                </Grid>
                            </StackPanel>

                            <!-- Recursive Directory Generation -->
                            <StackPanel x:ConnectionId='47' x:Name="recursiveDirectoryPanel" Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Directory:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" />
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.25*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='55' x:Name="settingsTargetDirTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                    <Button x:ConnectionId='56' x:Name="settingsTargetDirBrowse" Content="Browse"                                  Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="EV Configuration File:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="4"/>
                                <Grid Margin="0,0,0,10" Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.25*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='53' x:Name="evCsvFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                    <Button x:ConnectionId='54' x:Name="evCsvFilePathBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1">
                                <TextBlock Text="CR Configuration File:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="4"/>
                                <Grid Margin="0,0,0,10" Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.25*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:ConnectionId='51' x:Name="crCsvFilePathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                    <Button x:ConnectionId='52' x:Name="crCsvFilePathBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1" />
                                </Grid>
                            </StackPanel>
                            <controls:DataGrid x:ConnectionId='48' x:Name="evPreviewDataGrid" Grid.Row="6" Grid.Column="0" AutoGenerateColumns="True" IsReadOnly="True" Background="{ThemeResource SystemChromeHighColor}" Opacity="1" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" />
                            <controls:DataGrid x:ConnectionId='49' x:Name="crPreviewDataGrid" Grid.Row="6" Grid.Column="1" AutoGenerateColumns="True" IsReadOnly="True" Background="{ThemeResource SystemChromeHighColor}" Opacity="1" Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" />
                            <Button x:ConnectionId='50' x:Name="generateSettings" Content="🔄️ Generate Settings File(s)" Grid.Row="7"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Width="auto" FontSize="18" Visibility="Collapsed" Margin="10"/>
                        </Grid>
                    </Grid>
                    <!-- Import Solution Content -->
                    <Grid x:ConnectionId='30' x:Name="importContent" Grid.Column="0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3.5*" />
                        </Grid.ColumnDefinitions>
                        <!-- Environment Picker Panel -->
                        <Grid Grid.Column="0" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Environments" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                                <ListBox x:ConnectionId='43' x:Name="importEnvironmentList" ItemsSource="{Binding EnvironmentProfiles}" DisplayMemberPath="DisplayName"/>
                            </ScrollViewer>
                        </Grid>
                        <!-- Import Solution Details Panel -->
                        <Grid Grid.Column="1" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Import Solution" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                            <!-- Solution File Picker -->
                            <TextBlock Text="Solution File:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="1"/>
                            <Grid Margin="0,0,0,10" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.25*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:ConnectionId='41' x:Name="importZipPathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                <Button x:ConnectionId='42' x:Name="importZipFileBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1"/>
                            </Grid>
                            <!-- Settings File Picker -->
                            <TextBlock Text="Settings File:" VerticalAlignment="Center" Margin="10" Foreground="{ThemeResource SystemBaseHighColor}" FontWeight="SemiBold" Grid.Row="3"/>
                            <Grid Margin="0,0,0,10" Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.25*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:ConnectionId='39' x:Name="importJsonPathTextBox" Margin="0,0,10,0" Background="DarkGray" Grid.Column="0"/>
                                <Button x:ConnectionId='40' x:Name="importJsonFileBrowse" Content="Browse"                                Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Grid.Column="1"/>
                            </Grid>
                            <!-- Settings -->
                            <CheckBox x:ConnectionId='34' x:Name="activatePluginsCheckBox" Content="Activate Plugins" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="5"/>
                            <CheckBox x:ConnectionId='35' x:Name="stageAndUpgradeCheckBox" Content="Stage and Upgrade" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="6"/>
                            <CheckBox x:ConnectionId='36' x:Name="publishAfterImportCheckBox" Content="Publish after Import" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="7"/>
                            <CheckBox x:ConnectionId='37' x:Name="forceOverwriteCheckBox" Content="Force Overwrite" IsChecked="True" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="8"/>
                            <!-- Import Button -->
                            <Button x:ConnectionId='38' x:Name="importButton" Content="📥 Import Solution"                            Background="{ThemeResource SystemControlHighlightAccentBrush}" Foreground="White" Width="auto" FontSize="18" Grid.Row="9"/>
                        </Grid>
                    </Grid>
                    <!-- Jobs Panel -->
                    <Grid x:ConnectionId='31' x:Name="jobsPanel"  Grid.Column="1" Background="{ThemeResource SystemChromeDisabledLowColor}" Opacity=".9" Padding="10" Margin="10" CornerRadius="5" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Job History" FontWeight="Bold" Margin="0,0,0,10" Foreground="{ThemeResource SystemBaseHighColor}" Grid.Row="0"/>
                        <ListBox x:ConnectionId='32' x:Name="jobsListBox" ItemsSource="{Binding Jobs}"                                                 ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                                                <Run Text="{Binding Name}"/>
                                                <LineBreak/>
                                                <Run Text="Started: "/>
                                                <Run Text="{Binding Timestamp}"/>
                                                <LineBreak/>
                                                <Run Text="{Binding Output}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
                <!-- Pivot -->
                <Grid x:ConnectionId='24' x:Name="pivotFooter" Background="{ThemeResource SystemBaseMediumColor}" Padding="10" Margin="10" Opacity="0" CornerRadius="5" HorizontalAlignment="Stretch" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
